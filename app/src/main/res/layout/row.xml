<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/fieldCards"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription">

    <com.daimajia.swipe.SwipeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fieldSwipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:gravity="center"
            android:tag="Bottom2">

            <ImageView
                android:id="@+id/fieldEditSwipeButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/image_view_background"
                android:padding="5dp"
                android:src="@drawable/ic_edit"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"/>

            <ImageView
                android:id="@+id/fieldDeleteSwipeButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/image_view_background"
                android:padding="5dp"
                android:src="@drawable/ic_delete" />

        </LinearLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/incomeImageView"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_launcher" />


            <TextView
                android:id="@+id/incomeTitleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                android:layout_toEndOf="@+id/incomeImageView"
                android:layout_toRightOf="@+id/incomeImageView"
                android:paddingLeft="15dp"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black" />


        </RelativeLayout>
    </com.daimajia.swipe.SwipeLayout>

</android.support.v7.widget.CardView>