<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="7dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginStart="7dp"
    android:orientation="vertical"
    app:cardCornerRadius="15dp"
    tools:ignore="ContentDescription">

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/mainBudgetSwipe"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/mainBudgetEditSwipeButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_edit"
            android:background="@drawable/image_view_background"
            android:padding="5dp"
            android:layout_margin="3dp"/>

        <ImageView
            android:id="@+id/mainBudgetDeleteSwipeButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_delete"
            android:background="@drawable/image_view_background"
            android:padding="5dp"
            android:layout_margin="3dp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/onClickRelativeLayout"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/budgetTitleImageView"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:src="@mipmap/ic_car"
            android:clickable="false"
            android:focusable="false" />

        <TextView
            android:id="@+id/budgeTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Monthly Budget"
            android:textColor="@android:color/black"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/budgetTitleImageView"
            android:layout_toEndOf="@+id/budgetTitleImageView"
            android:clickable="false"
            android:focusable="false" />

        <TextView
            android:id="@+id/budgetDateDetailsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17 Jun 2015 - 17 Aug 2015"
            android:textSize="12sp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:layout_alignTop="@+id/budgetTitleImageView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:clickable="false"
            android:focusable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="3000/15000"
            android:id="@+id/amountDetailsTextView"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_alignBottom="@+id/budgetTitleImageView"
            android:layout_alignRight="@+id/budgetDateDetailsTextView"
            android:layout_alignEnd="@+id/budgetDateDetailsTextView"
            android:clickable="false"
            android:focusable="false" />


    </RelativeLayout>

    </com.daimajia.swipe.SwipeLayout>

</android.support.v7.widget.CardView>